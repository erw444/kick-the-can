<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/HomeFragment">

    <fragment
        android:id="@+id/HomeFragment"
        android:name="com.erw.kickthecan.HomeFragment"
        android:label="@string/home_screen_label"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_HomeFragment_to_PickCalendarFragment"
            app:destination="@id/PickCalendarFragment" />
    </fragment>
    <fragment
        android:id="@+id/PickCalendarFragment"
        android:name="com.erw.kickthecan.PickCalendarFragment"
        android:label="@string/pick_calendar_label"
        tools:layout="@layout/fragment_pick_calendar">

        <action
            android:id="@+id/action_PickCalendarFragment_to_HomeFragment"
            app:destination="@id/HomeFragment" />
    </fragment>
</navigation>